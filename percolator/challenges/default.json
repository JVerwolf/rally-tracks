        {
          "name": "percolator_with_content_ignore_me",
          "operation": {
            "operation-type": "composite",
            "requests": [
              {
                "stream": [
                  {
                    "name": "cache-clear",
                    "operation-type": "raw-request",
                    "path": "/_internal/blob_caches/clear",
                    "method": "POST"
                  },
                  {
                    "operation": "percolator_with_content_ignore_me-op",
                    "warmup-iterations": 10,
                    "iterations": 100,
                    "#COMMENT": "Be aware that we specify *target-interval* here! This means we issue one query every 12 seconds",
                    "target-interval": 12
                  }
                ]
              }
            ]
          }
        },
        {
          "name": "percolator_no_score_with_content_ignore_me",
          "operation": {
            "operation-type": "composite",
            "requests": [
              {
                "stream": [
                  {
                    "name": "cache-clear",
                    "operation-type": "raw-request",
                    "path": "/_internal/blob_caches/clear",
                    "method": "POST"
                  },
                  {
                    "operation": "percolator_no_score_with_content_ignore_me-op",
                    "warmup-iterations": 100,
